{
  "modules": [],
  "debug": false,
  "time": false,
  "sass": {
    "sourcemap": false,
    "source": "assets/sass/style.sass",
    "target": "assets/css/style.css"
  },
  "sprite": {
    "source": "assets/images/s/*.png",
    "target": "assets/images/sprites.png",
    "stylesheet": "assets/sass/_sprites.sass"
  },
  "svgsprite": {
    "source": "assets/images/svg-sprites/",
    "watch": "assets/images/svg-sprites/*.svg",
    "target": "assets/images/",
    "stylesheet": "../sass/_svg-sprites.scss"
  },
  "svg2png": {
    "source": "assets/images/svg/*.svg",
    "target": "assets/images/svg/"
  },
  "js": {
    "sources": {
      "ie": [
        "bower_components/html5shiv/dist/html5shiv.js",
        "bower_components/selectivizr/selectivizr.js",
        "bower_components/respond/dest/respond.src.js"
      ],
      "vendor": [
        "bower_components/jquery/dist/jquery.js",
        "bower_components/rapido/dist/js/rapido.js"
      ],
      "modernizr": [
        "bower_components/modernizr/modernizr.js"
      ],
      "app": [
        "assets/js/app.js"
      ]
    },
    "target": {
      "ie": "assets/js/ie.min.js",
      "vendor": "assets/js/vendor.min.js",
      "modernizr": "assets/js/modernizr.min.js",
      "app": "assets/js/app.min.js"
    }
  },
  "ls": {
    "sources": [
      "assets/ls/**/*.ls"
    ],
    "target": "assets/js/app.js"
  },
  "browserify": {
    "sources": [
      "assets/ls/**/*.ls"
    ],
    "target": "assets/js/app.js"
  }
}

